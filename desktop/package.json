{
  "name": "jellyjump",
  "version": "1.0.0",
  "description": "JellyJump Video Player",
  "author": "Jebin <jebin@example.com>",
  "homepage": "https://github.com/jebin/JellyJump",
  "repository": {
    "type": "git",
    "url": "https://github.com/jebin/JellyJump.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.jellyjump.app",
    "productName": "JellyJump",
    "artifactName": "JellyJump.${ext}",
    "directories": {
      "output": "dist"
    },
    "icon": "build/assets/icons/jelly_jump_logo.png",
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "build/**/*"
    ],
    "asarUnpack": [
      "preload.js"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Video"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.video",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "artifactName": "JellyJump.Setup.${ext}"
    },
    "portable": {
      "artifactName": "JellyJump.Portable.${ext}"
    }
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  }
}